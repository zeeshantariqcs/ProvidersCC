<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Providers Registry</title>
    <link rel="stylesheet" href="/node_modules/bulma/css/bulma.min.css">
</head>

<body>
<nav class="navbar is-link" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
        <a class="navbar-item" href="/">
            <img src="/img/logo.png" alt="Logo">
                <span style="margin-left: 10px">
                    Providers Registry
                </span>
        </a>
    </div>
</nav>

<div class="container" style="margin-top: 20px">
    <div class="columns">
        <div class="column is-half is-offset-one-quarter">

            <% if (locals.message) { %>
            <div class="notification is-primary">
                <%- locals.message %>
            </div>
            <% } %>

            <form action="/register" method="POST">
                <div class="field">
                    <label class="label">First Name</label>

                    <div class="control">
                        <input name="firstName" class="input"
                               value="<%= typeof firstName != "undefined" ? firstName : "" %>"
                               type="text" placeholder="First Name">
                    </div>
                </div>
                <div class="field">
                    <label class="label">Last Name</label>

                    <div class="control">
                        <input name="lastName" class="input"
                               value="<%= typeof lastName != "undefined" ? lastName : "" %>"
                               type="text" placeholder="Last Name">
                    </div>
                </div>
                <div class="field">
                    <label class="label">NPI Number</label>

                    <div class="control">
                        <input name="NPINumber" class="input"
                               value="<%= typeof NPINumber != "undefined" ? NPINumber : "" %>"
                               type="text" placeholder="NPI Number">
                    </div>
                </div>
                <div class="field is-grouped is-pulled-right">
                    <div class="control">
                        <button class="button is-link">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>